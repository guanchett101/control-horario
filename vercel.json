{
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth.js"
    },
    {
      "source": "/api/empleados/:path*",
      "destination": "/api/empleados.js"
    },
    {
      "source": "/api/registros/:path*",
      "destination": "/api/registros.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}