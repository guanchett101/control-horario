{
  "version": 2,
  "buildCommand": "cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/build",
  "env": {
    "REACT_APP_API_URL": "/api",
    "NODE_VERSION": "18"
  },
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/empleados/(.*)",
      "dest": "/api/empleados.js"
    },
    {
      "src": "/api/empleados",
      "dest": "/api/empleados.js"
    },
    {
      "src": "/api/registros/(.*)",
      "dest": "/api/registros.js"
    },
    {
      "src": "/api/registros",
      "dest": "/api/registros.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
